@{
    ViewData["Title"] = "Home Page";
}

@model List<ChatDTO>

<div class="text-center">
    <h1 class="display-3">Welcome @User.Identity.Name</h1>
</div>

Список Чатов

<div style="width: 100%; border-radius: 15px; box-shadow: 2px 4px 4px 4px #939292; ">
    @foreach (var chat in Model)
    {
        <form method="post" asp-controller="Chat" style='float: left'>
            <input type="hidden" value="@chat.Id" name="chatId">
            <input type="submit" value="Войти в @chat.ChatName" class="bg-white border-0" />
        </form>
        @if (chat.ChatUsers.First().Nickname == User.Identity.Name)
        {
            <form method="post" asp-action="DelChat" asp-controller="Home" style='float: right'>
                <input type="hidden" value="@chat.Id" name="chatId">
                <input type="submit" value="x" class="bg-transparent border-0" />
            </form>
        }
        <form method="post" asp-controller="AddUserToChat">
            <input type="hidden" value="@chat.Id" name="chatId">
            <input type="submit" value="+" class="bg-transparent border-0" />
        </form>

    }
</div>

<br>
<form asp-area="" asp-controller="NewChat" asp-action="Index" style="position:absolute; width:100%">
    <input type="submit" value="Новый чат" class="btn btn-primary btn-lg btn-block" />
 </form>
